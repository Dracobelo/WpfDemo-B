<Window x:Class="WpfDemo_B.Reportes.Reportes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo_B.Reportes"
        mc:Ignorable="d"
        Title="Reportes" Height="450" Width="800">
    <Grid Background="#F5F5F5">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Título -->
            <TextBlock Text="Reportes"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Botones principales -->
            <Button Content="Cargas" Width="200" Height="40" FontSize="16" Margin="0,0,0,10" Background="LightBlue"
                    Click="Button_Click"/>
            <Button Content="Ingresos" Width="200" Height="40" FontSize="16" Margin="0,0,0,10" Background="LightBlue"
                    Click="Button_Click_1"/>
            <Button Content="Salidas" Width="200" Height="40" FontSize="16" Margin="0,0,0,30" Background="LightGreen"
                    Click="Button_Click_2"/>

            <!-- Botón salir -->
            <Button Content="Volver" Width="200" Height="40" FontSize="16" 
                    Background="#E74C3C" Foreground="White"
                    Click="Button_Click_3"/>
        </StackPanel>
    </Grid>
</Window>
