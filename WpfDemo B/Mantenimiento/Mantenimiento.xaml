<Window x:Class="WpfDemo_B.Mantenimiento.Mantenimiento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo_B.Mantenimiento"
        mc:Ignorable="d"
        Title="Mantenimiento" Height="450" Width="800">

    <Grid Background="#F5F5F5">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Título -->
            <TextBlock Text="Mantenimiento"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Botones principales -->
            <Button Content="Conductores" Width="200" Height="40" FontSize="16" Margin="0,0,0,10" Background="LightBlue"
                    Click="Button_Click"/>
            <Button Content="Transportistas" Width="200" Height="40" FontSize="16" Margin="0,0,0,10" Background="LightYellow"
                    Click="Button_Click_1"/>
            <Button Content="Camiones" Width="200" Height="40" FontSize="16" Margin="0,0,0,10" Background="LightGreen"
                    Click="Button_Click_2"/>
            <Button Content="Productos" Width="200" Height="40" FontSize="16" Margin="0,0,0,30" Background="LightSeaGreen"
                    Click="Button_Click_3"/>

            <!-- Botón salir -->
            <Button Content="Volver" Width="200" Height="40" FontSize="16" 
                    Background="#E74C3C" Foreground="White"
                    Click="Button_Click_4"/>
        </StackPanel>
    </Grid>

</Window>
