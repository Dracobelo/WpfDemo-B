<Window x:Class="WpfDemo_B.Operaciones.Ingresos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo_B.Operaciones"
        mc:Ignorable="d"
        Title="Ingresos" Height="650" Width="400">
    <Grid Background="#F5F5F5" Margin="20">
        <StackPanel>

            <!-- Título -->
            <TextBlock Text="Formulario de Registro" 
                       FontSize="22" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Tipo Documento -->
            <TextBlock Text="Tipo de Documento:" FontWeight="SemiBold"/>
            <ComboBox Width="200" Margin="0,5,0,15">
                <ComboBoxItem Content="DNI"/>
                <ComboBoxItem Content="Carnet Extranjería"/>
                <ComboBoxItem Content="Pasaporte"/>
            </ComboBox>

            <!-- Número Documento -->
            <TextBlock Text="Número de Documento:" FontWeight="SemiBold"/>
            <TextBox Width="200" Margin="0,5,0,15"/>

            <!-- Placa -->
            <TextBlock Text="Placa:" FontWeight="SemiBold"/>
            <TextBox Width="200" Margin="0,5,0,15"/>

            <!-- Turno -->
            <TextBlock Text="Turno:" FontWeight="SemiBold"/>
            <ComboBox Width="200" Margin="0,5,0,15">
                <ComboBoxItem Content="Mañana"/>
                <ComboBoxItem Content="Tarde"/>
                <ComboBoxItem Content="Noche"/>
            </ComboBox>

            <!-- Nombre Conductor -->
            <TextBlock Text="Nombre del Conductor:" FontWeight="SemiBold"/>
            <TextBox Width="200" Margin="0,5,0,15"/>

            <!-- Nombre Cliente -->
            <TextBlock Text="Nombre del Cliente:" FontWeight="SemiBold"/>
            <TextBox Width="200" Margin="0,5,0,15"/>

            <!-- Fecha y hora -->
            <TextBlock Text="Fecha y Hora:" FontWeight="SemiBold"/>
            <DatePicker Width="200" Margin="0,5,0,10"/>
            <TextBox Width="200" Margin="0,0,0,15" Text="HH:mm"/>

            <!-- Peso de Ingreso -->
            <TextBlock Text="Peso de Ingreso (Kg):" FontWeight="SemiBold"/>
            <TextBox Width="200" Margin="0,5,0,20"/>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Guardar" Width="100" Height="35" Background="#2ECC71" Foreground="White" Margin="0,0,10,0"/>
                <Button Content="Cancelar" Width="100" Height="35" Background="#E74C3C" Foreground="White"
                        Click="btn_Cancelar"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
