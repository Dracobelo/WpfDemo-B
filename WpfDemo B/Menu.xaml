<Window x:Class="WpfDemo_B.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo_B"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid Background="#F5F5F5">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Título -->
            <TextBlock Text="Menú"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Botones principales -->
            <Button Content="Operaciones" Width="200" Height="40" FontSize="16" Margin="0,0,0,10" Background="LightBlue"
                    Click="Button_Click"/>
            <Button Content="Mantenimiento" Width="200" Height="40" FontSize="16" Margin="0,0,0,10" Background="LightGreen"
                    Click="Button_Click_1"/>
            <Button Content="Reportes" Width="200" Height="40" FontSize="16" Margin="0,0,0,20" Background="LightSeaGreen" 
                    Click="Button_Click_2"/>

            <!-- Botón salir -->
            <Button Content="Salir" Width="200" Height="40" FontSize="16" 
                    Background="#E74C3C" Foreground="White"
                    Click="Salir_Click"/>
        </StackPanel>
    </Grid>
</Window>
